<div class="w-full p-10 mt-32 flex flex-row flex-wrap">
    <h1 class="text-4xl text-gray-200 mt-5 mr-6 pt-2" data-translate data-en="Contact me" data-es="Contáctame">Contáctame</h1>
</div>

<div class="flex justify-center flex-row mb-48">
    <div class="w-1/2">
        <form class="max-w-3xl mx-auto ml-0 pl-8 pr-8 pt-5" id="contact-form">
            <label for="empresa" class="block mb-2 text-sm font-medium text-verdeagua dark:text-white" data-translate data-en="Company" data-es="Empresa">Empresa</label>
            <div class="flex mb-5 w-full">
                <span class="inline-flex items-center px-3 text-sm text-gray-900 bg-transparent border border-e-0 border-verdeagua rounded-l-md dark:bg-gray-600 dark:text-gray-400 dark:border-gray-600">
                    <svg class="w-4 h-4 text-gray-400 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M10 0a10 10 0 1 0 10 10A10.011 10.011 0 0 0 10 0Zm0 5a3 3 0 1 1 0 6 3 3 0 0 1 0-6Zm0 13a8.949 8.949 0 0 1-4.951-1.488A3.987 3.987 0 0 1 9 13h2a3.987 3.987 0 0 1 3.951 3.512A8.949 8.949 0 0 1 10 18Z"/>
                    </svg>
                </span>
                <input type="text" id="empresa" name="empresa" required class="rounded-none bg-transparent border-verdeagua text-gray-200 focus:ring-blue-500 focus:border-blue-500 block flex-1 min-w-0 w-full text-sm p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" data-translate data-en="Company" data-es="Empresa" placeholder="Empresa">
            </div>

            <div class="mb-5">
                <label for="correo" class="block mb-2 text-sm font-medium text-verdeagua dark:text-white" data-translate data-en="Email" data-es="Correo">Correo</label>
                <div class="relative">
                    <div class="absolute inset-y-0 left-0 flex items-center pl-3.5 pointer-events-none">
                        <svg class="w-4 h-4 text-gray-400 dark:text-gray-500" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 16">
                            <path d="m10.036 8.278 9.258-7.79A1.979 1.979 0 0 0 18 0H2A1.987 1.987 0 0 0 .641.541l9.395 7.737Z"/>
                            <path d="M11.241 9.817c-.36.275-.801.425-1.255.427-.428 0-.845-.138-1.187-.395L0 2.6V14a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V2.5l-8.759 7.317Z"/>
                        </svg>
                    </div>
                    <input type="email" id="correo" name="correo" required class="bg-transparent border border-verdeagua text-gray-300 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full pl-10 p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-800 dark:focus:border-blue-500" data-translate data-en="name@company.com"
                    data-translate data-es="nombre@empresa.com" placeholder="nombre@empresa.com">
                </div>
            </div>

            <div>
                <label for="mensaje" class="block mb-2 text-sm font-medium text-verdeagua dark:text-white" data-translate data-en="Your message" data-es="Su mensaje">Su mensaje</label>
                <textarea id="mensaje" name="mensaje" rows="4" required class="block p-2.5 w-full text-sm text-gray-300 bg-transparent rounded-lg border border-verdeagua focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"placeholder="Su mensaje"  data-translate data-en=" " ></textarea>
            </div>

            <button type="submit" id="enviar" class="relative inline-flex items-center justify-center p-0.5 mb-2 me-2 mt-10 overflow-hidden text-sm font-medium text-white rounded-lg group bg-gradient-to-br from-green-400 to-green-800 group-hover:from-green-400 group-hover:to-blue-600 hover:text-white dark:text-white focus:ring-4 focus:outline-none focus:ring-green-200 dark:focus:ring-green-800">
                <span class="relative px-5 py-2.5 transition-all ease-in duration-75 bg-black dark:bg-gray-900 rounded-md group-hover:bg-opacity-0" data-translate data-en="Send" data-es="Enviar">
                    Enviar
                </span>
            </button>
        </form>
    </div>

    <div class="w-1/2 flex justify-center items-start static">
        <dotlottie-player src="https://lottie.host/d154762e-44fa-4273-901d-a76f18832f40/ih44wR0V8J.json" background="transparent" speed="1" style="width: 500px; height: 500px;" loop autoplay></dotlottie-player>
    </div>
</div>
<script src="https://unpkg.com/@dotlottie/player-component@latest/dist/dotlottie-player.mjs" type="module"></script> 

    
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/@emailjs/browser@4/dist/email.min.js"></script>
<script type="text/javascript">
    document.getElementById('contact-form').addEventListener('submit', function(event) {
        event.preventDefault();
  
        // Validaciones de los campos
        const empresa = document.getElementById('empresa').value;
        const correo = document.getElementById('correo').value;
        const mensaje = document.getElementById('mensaje').value;
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
  
        if (!empresa || !correo || !mensaje) {
            alert('Por favor, completa todos los campos.');
            return;
        }
  
        if (!emailRegex.test(correo)) {
            alert('Por favor, ingresa un correo electrónico válido.');
            return;
        }
  
        // Enviar el correo usando EmailJS
        emailjs.init('q7V4CruzYSyJDwlu_');
  
        emailjs.send('service_dvrg3eh', 'template_sj0lf8h', {
            empresa: empresa,
            correo: correo,
            mensaje: mensaje
        }).then(response => {
            alert('¡Correo enviado con éxito!');
            console.log('SUCCESS!', response.status, response.text);
        }).catch(error => {
            console.error('FAILED...', error);
        });
    });
</script>
